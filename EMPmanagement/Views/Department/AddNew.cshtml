@model EMPmanagement.Models.Department



<div id="myModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: block;">
    <div class="modal-dialog modal-sm ">
        <div class="modal-content">
            <div class="modal-header box box-inverse box-info">
                <div class="pull-left">
                    <h6 class="modal-title fs-18 text-bold">@Resources.Resource.Add</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-body">

                <div class="col-lg-12 row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DepArName)<span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.DepArName, new { @id = "DepArName", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DepEngName)<span class="text-danger">*</span>
                        @Html.TextBoxFor(m => m.DepEngName, new { @id = "DepEngName", @class = "form-control" })
                    </div>




                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary btn-secondary" id="SaveNew"> <i class="fa fa-save"></i><span class="btn-text">@Resources.Resource.Save</span></button>
                    <button type="button" class="btn btn-default btn-secondary" data-bs-dismiss="modal"><i class="fa fa-times"></i><span class="btn-text">@Resources.Resource.Close</span></button>
                </div>
            </div>
        </div>
    </div>
</div>









